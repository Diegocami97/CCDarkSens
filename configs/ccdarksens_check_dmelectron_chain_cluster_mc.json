{
  "run": {
    "label": "check_dmelectron_chain_cluster_mc",
    "outdir": "outputs/check_dmelectron_chain_cluster_mc",
    "cl": 0.90,
    "test_stat": "PLR",
    "n_toys": 0,
    "rng_seed": 12345,
    "verbosity": 1
  },

  "detector": {
    "rows": 1300,
    "cols": 6300,
    "pixel_size_um": 15.0,
    "thickness_mm": 0.67,
    "active_fraction": 0.98,
    "target_element": "Si",
    "density_g_cm3": 2.329,
    "mass_kg": 1.0
  },

  "experiment": {
    "mode": "asimov",
    "livetime_days": 365.25,
    "duty_cycle": 1.0,
    "binning": { "ne_min": 0, "ne_max": 20 },
    "roi_bins": [1, 2, 3, 4, 5]
  },

  "response": {
    "mode": "cluster_mc",
    "cluster_mc": {
      "n_events_per_ne": 20000,
      "sigma_readout_e": 0.16,
      "Qmin_e": 0.3,
      "Qmax_e": 4.0,
      "diffusion": {
        "A_um2": 803.25,
        "b_umInv": 0.00065,
        "alpha": 1.0,
        "beta_per_keV": 0.0
      },
      "binning": { "rows_bin": 1, "cols_bin": 1 },
      "pileup_with_dc": true,
      "rng_seed": 987654321
    }
  },

  "backgrounds": {
    "dark_current": {
      "lambda_e_per_pix_per_year": 1.0e-5,
      "norm_scale": 1.0
    },
    "pattern_efficiency": {
      "type": "flat",
      "epsilon": 0.95
    },
    "timing": {
      "exposure_time_s": 3600,
      "n_exposures": null
    },

    "flat_background": {
      "norm_per_kg_year_keV": 1.0,
      "Emin_eV": 0.0,
      "Emax_eV": 20.0,
      "nbins": 200
    }
  },

  "model": {
    "type": "dm_electron",
    "material": "Si",
    "mediator": "heavy",
    "rates_dir": "data/qedark_rates/Si/heavy",
    "filename_template": "dRdE_{material}_{mediator}_m{mchi_MeV}_s{sigma_e_cm2}.csv",

    "mchi_MeV": 10.5,
    "sigma_e_cm2": "1.0e-34",

    "Emin_eV": 0.0,
    "Emax_eV": 20.0,
    "nbins": 200
  }
}
