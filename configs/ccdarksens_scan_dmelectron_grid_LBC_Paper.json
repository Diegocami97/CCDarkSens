{
  "run": {
    "label": "scan_dmelectron_grid_cluster_mc",
    "outdir": "outputs/scan_dmelectron_grid_cluster_mc",
    "cl": 0.90,
    "test_stat": "PLR",
    "n_toys": 0,
    "rng_seed": 12345,
    "verbosity": 1
  },

  "detector": {
    "rows": 1300,
    "cols": 6300,
    "pixel_size_um": 15.0,
    "thickness_mm": 0.67,
    "active_fraction": 0.98,
    "target_element": "Si",
    "density_g_cm3": 2.329,
    "mass_kg": 1.0
  },

  "experiment": {
    "mode": "asimov",
    "livetime_days": 1.3,
    "duty_cycle": 1.0,
    "binning": { "ne_min": 0, "ne_max": 20 },
    "roi_bins": [1,2, 3, 4, 5]
  },

  "response": {
    "mode": "cluster_mc",
    "cluster_mc": {
      "n_events_per_ne": 20000,
      "sigma_readout_e": 0.16,
      "Qmin_e": 0.3,
      "Qmax_e": 4.0,
      "diffusion": {
        "A_um2": 803.25,
        "b_umInv": 0.00065,
        "alpha": 1.0,
        "beta_per_keV": 0.0
      },
      "binning": { "rows_bin": 1, "cols_bin": 1 },
      "pileup_with_dc": true,
      "rng_seed": 987654321
    }
  },

  "backgrounds": {
    "dark_current": {
      "lambda_e_per_pix_per_year": 18,
      "norm_scale": 1.0
    },
    "pattern_efficiency": {
      "type": "flat",
      "epsilon": 0.95
    },
    "timing": {
      "exposure_time_s": 1700,
      "n_exposures": null
    },
    "flat_background": {
      "norm_per_kg_year_keV": 0.0,
      "Emin_eV": 0.0,
      "Emax_eV": 20.0,
      "nbins": 200
    }
  },

  "model": {
    "type": "dm_electron",
    "material": "Si",
    "mediator": "heavy",
    "rates_dir": "data/qedark_rates/Si/heavy",
    "filename_template": "dRdE_{material}_{mediator}_m{mchi_MeV}_s{sigma_e_cm2}.csv",

    "Emin_eV": 0.0,
    "Emax_eV": 20.0,
    "nbins": 200,

    "grid": {
      "mchi_MeV": {
        "values": [
          0.53, 0.56, 0.60, 0.63, 0.67, 0.71, 0.75, 0.80,
          0.85, 0.90, 1.0, 1.6, 2.6, 4.3, 7.2, 11.0,
          19.0, 31.0, 51.0, 84.0, 140.0, 230.0, 370.0,
          610.0, 1000.0
        ]
      },
      "sigma_e_cm2": {
        "logspace": {
          "start_exp": -40,
          "stop_exp": -28,
          "num": 41,
          "endpoint": true
        }
      },
      "format": {
        "mchi": ".6f",
        "sigma": ".1e"
      }
    }
  }
}
